<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a409lab00.interactiveclassroom.MainView">

    <Button
        android:id="@+id/getQuestion"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_red_light"
        android:text="作答"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/destroy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="？"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/review"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_blue_bright"
        android:text="查看"
        app:layout_constraintStart_toEndOf="@+id/getQuestion"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/checkbroad"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_green_light"
        android:text="公告"
        app:layout_constraintStart_toEndOf="@+id/review"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
